<% layout("/layouts/boilerplate", {login : login}) %>
<body>
    <div class="w-[100vw] h-auto p-4  flex items-center justify-center">
         <div class="w-1/2 ">
             <div class="w-full h-[30%] flex justify-center mb-4"><img class="rounded-md w-96 h-60" src="<%= listing.image %>" alt="loading...."></div>
            <h1><b>Titel</b> : <%= listing.title %></h1>  
            <p><b>Description</b> : <%= listing.description %> </p>
            <h1><b>Price</b>: &#8377 <%=listing.price.toLocaleString("en-In")%>/month </h1> 
            <h1><b>Country</b>: <%= listing.country %></h1>
            <h2><b>Location : </b><%= listing.location %></h2>
            <div class=" mt-6">
                <a class="text-white w-24 h-8 bg-blue-800 rounded-sm mr-4 px-7 py-2" href="/edit/<%=listing._id %>">Edit</a>
                <a class="text-white w-24 h-8 bg-red-800 rounded-sm mr-4 px-7 py-2" href="/delete/<%=listing._id %>">Delete</a>
            </div>
        </div>
       </div>

       <section class="create-form flex justify-center absolute top-[-1000px]  w-[100%] h-screen items-center">
        <div class=" w-[40%] flex items-center justify-center">
         
           <div class="form-container">
              <form class="form" action="/edit/<%= listing._id %>" method="post">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input required="" name="title" id="title" type="text" value="<%= listing.title %>">
                </div>
     
                <div class="form-group">
                  <label for="textarea">Description</label>
                  <textarea required="" value="<%= listing.description %>" cols="50" rows="10" id="textarea" name="description">          </textarea>
                </div>
     
                <div class="form-group">
                 <label for="img">Image UTL/LINK</label>
                 <input required="" value="<%=listing.image%>" name="image" id="img" type="text">
               </div>
     
               <div class="form-group">
                 <label for="price">Price</label>
                 <input required="" value="<%=listing.price%>" name="price"  id="price" type="number">
               </div>
     
               
         <div class="form-group">
           <label for="location">Location</label>
           <input required="" value="<%=listing.location%> name="location" id="location" type="text">
         </div>
     
         <div class="form-group">
           <label for="country">Country</label>
           <input required="" value="<%=listing.country%> name="country" id="country" type="text">
         </div>
     
                <button type="submit" class="form-submit-btn">Submit</button>
              </form>
            </div>
            <p class="close postion absolute top-[16px] right-[18rem] w-6 h-6 flex justify-center items-center rounded-full  bg-blue-600"><i class=" icon fa-solid fa-xmark"></i></p>
        </div>
     </section>
</body>
