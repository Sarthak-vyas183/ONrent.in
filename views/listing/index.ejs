
<% layout("/layouts/boilerplate") %>
<body class="w-screen ">
     <section class="flex items-center gap-60 px-10 py-4">
        <h1 class="text-2xl font-bold">hello User</h1>
        <button class="createbtn w-20 h-8 rounded-md text-white bg-blue-600">Create</button>
     </section>
<section class="px-10">
     <% itemdata.forEach(element => { %>
           <form class="block" action="/show/<%=element._id %>" method="get"><p><%= element.title %> <button type="submit" class="w-16 h-6 rounded-md text-white bg-blue-600">read more</button></p></form>
   <%  }); %>
</section>

<section class="create-form flex justify-center absolute top-[-1000px]  w-[100%] h-screen items-center">
   <div class=" w-[40%] flex items-center justify-center">
    
      <div class="form-container">
         <form class="form" action="/create" method="post">
           <div class="form-group">
             <label for="title">Title</label>
             <input required="" name="title" id="title" type="text">
           </div>

           <div class="form-group">
             <label for="textarea">Description</label>
             <textarea required="" cols="50" rows="10" id="textarea" name="description">          </textarea>
           </div>

           <div class="form-group">
            <label for="img">Image UTL/LINK</label>
            <input required="" name="image" id="img" type="text">
          </div>

          <div class="form-group">
            <label for="price">Price</label>
            <input required="" name="price" id="price" type="number">
          </div>

          
    <div class="form-group">
      <label for="location">Location</label>
      <input required="" name="location" id="location" type="text">
    </div>

    <div class="form-group">
      <label for="country">Country</label>
      <input required="" name="country" id="country" type="text">
    </div>

           <button type="submit" class="form-submit-btn">Submit</button>
         </form>
       </div>
       <p class="close postion absolute top-[16px] right-[18rem] w-6 h-6 flex justify-center items-center rounded-full  bg-blue-600"><i class=" icon fa-solid fa-xmark"></i></p>
   </div>
</section>
  
</body>
