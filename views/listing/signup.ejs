<% layout("/layouts/boilerplate", {login : login}) %>

<body>
    <div class="w-screen flex justify-center">
        <div class="main w-[50%]  py-8 px-16">
            <h1 class="text-black font-medium text-3xl ml-40 mb-1">SignUp</h1>

        <form action="/signup" method="post">
                    
            <div class="form-group mt-2">
              <label for="title">Full Name</label><br>
              <input class="w-[90%] rounded-sm py-1 px-2" required="" name="fullname"  id="title" type="text" placeholder="Enter your Name">
            </div>
 
            <div class="form-group">
              <label for="username">username</label><br>
              <input  class="w-[90%] rounded-sm py-1 px-2" required=""  id="username" name="username" placeholder="@vedant_sharam"></input>
            </div>
 
            <div class="form-group">
             <label for="email">email</label><br>
             <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="abcd@gmail.com" name="email" id="email" type="email">
           </div>

           <div class="form-group">
            <label for="pass">Password</label><br>
            <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="Create Strong Password" name="password" id="password" type="text">
           </div>

            <div class="form-group">
             <label for="img">Image</label><br>
             <input class="w-[90%] rounded-sm py-1 px-2"  placeholder="Profile image URL/link" name="coverImage" id="img" type="text">
           </div>

            <button type="submit" class="ml-4 text-white rounded-md mt-4 w-32 h-8 bg-[#fb3a5c]">SignUp</button>
         
  </form>
    </div>
</div>
</div>
</body>
