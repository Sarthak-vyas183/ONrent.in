<% layout("/layouts/boilerplate", { login : login }) %>

<body>
<div class="w-screen flex justify-center">
        <div class="main w-[50%]  py-8 px-16">
            <h1 class="text-black font-medium text-3xl ml-40 mb-1">Login</h1>

        <form action="/login" method="post">
            
 
            <div class="form-group">
             <label for="email">email</label><br>
             <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="abcd@gmail.com" name="email" id="email" type="email">
           </div>

           <div class="form-group">
            <label for="pass">Password</label><br>
            <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="Create Strong Password" name="password" id="password" type="text">
           </div>

           <div class="flex gap-2">
            <button type="submit" class="ml-4 text-white rounded-md mt-4 w-32 h-8 bg-[#fb3a5c]">login</button>
            <a class="text-blue-800 underline ml-4  mt-4 w-32 h-8 " href="/forgetpass">Forget Password</a>
           </div>
         
  </form>
    </div>
</div>
</div>
</body>
