<% layout("/layouts/boilerplate", { login : login }) %>

<body>
    <div class="w-screen flex justify-center">
        <div class="main w-[50%]  py-8 px-16">
            <h1 class="text-black font-medium text-3xl ml-40 mb-1">Login</h1>

        <form action="/forgetpass" method="post">
            
            <div class="form-group">
                <label for="email">Email</label><br>
                <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="Enter Your Email " name="email" id="email" type="email">
             </div>

            <div class="form-group">
            <label for="pass">Current Password</label><br>
            <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="Please Enter your Current Password" name="currPassword" id="password" type="text">
           </div>

            <div class="form-group">
            <label for="pass">New Password</label><br>
            <input class="w-[90%] rounded-sm py-1 px-2" required="" placeholder="Enter New Password" name="newPassword" id="password" type="text">
           </div>

           <button type="submit" class="ml-4 text-white rounded-md mt-4 w-32 h-8 bg-[#fb3a5c]">Update Password</button>
         
  </form>
    </div>
</div>
</div>
</body>
